<div class="panel-body">
  <div class="form-group">
    <%= form_for(@my_profile) do |f| %>
      <% if @my_profile.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@my_profile.errors.count, "error") %> prohibited this my_profile from being saved:</h2>

          <ul>
          <% @my_profile.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
          </ul>
        </div>
      <% end %>
      <h3>Hello <%= current_user.name %></h3>
      <br />
      <div class="field">
        <%= f.label :secondname %><br>
        <%= f.text_field :secondname, placeholder: "Secondname", class: "form-control" %>
      </div>
      <br />
      <div class="field">
        <%= f.label :bio %><br>
        <%= f.text_area :bio, placeholder: "Maximum 500 Characters", class: "form-control" %>
      </div>
      <br />
      <div class="field">
        <%= f.label :age %><br>
        <%= f.date_select :age, start_year: Date.current.year, end_year: 1915 %>
      </div>
      <br />
      <div class="field">
        <%= f.label :profile_image %><br>
        <%= f.file_field :avatar %>
        <!-- <p class="help-block">Example block-level help text here.</p> -->
      </div>
      <br />
      <div class="actions">
        <%= f.submit class: "btn btn-success" %>
      </div>
    <% end %>
  </div>
</div>
